# API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-key-here
E2B_API_KEY=e2b_your-e2b-key-here

# Resource Limits (adjust based on your VPS and budget)
MAX_CONCURRENT_SANDBOXES=2
MAX_SANDBOXES_PER_HOUR=20

# Timeouts (seconds)
CODE_EXECUTION_TIMEOUT=30.0
REQUEST_TIMEOUT=60.0
SANDBOX_CREATION_TIMEOUT=120.0

# Agent Configuration
MAX_ITERATIONS=3
MAX_RPM=10
MAX_RETRIES=2
RETRY_DELAY=5.0

# Code Limits
MAX_CODE_LENGTH=10000
MAX_OUTPUT_LENGTH=5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/crewai/app.log

# Monitoring
ENABLE_METRICS=true
METRICS_FILE=/var/log/crewai/metrics.json
HEALTH_CHECK_INTERVAL=300
